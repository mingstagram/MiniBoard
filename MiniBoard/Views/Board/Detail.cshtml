
<div class="container card">
    <div class="card-body">
        <a asp-controller="Board" asp-action="Index" class="btn btn-info">돌아가기</a>
    </div>
    <div class="card-header">
        글번호 : <span>@Model.NoteNo</span> | 작성자 : <span>@Model.UserNo</span>
        <span style="float: right;">
            <span id="blike">
                추천 : @*@Model.Like*@ 0
            </span> &nbsp; <span>조회수 : @*@Model.Count*@ 0 </span>&nbsp;
        </span>
    </div>
    <div class="form-group card-body" style="height: 20px;">
        <h3>@Model.NoteTitle</h3>
    </div>
    <hr />
    <div class="form-group card-body">
        <div>@Html.Raw(Model.NoteContents)</div>
    </div>
    <br /> <br /> <br />
                  <div style="margin: 10px;">
                      <button type="button" class="btn btn-Light" @*onclick="index.like()"*@ style="border: 1px solid black;">
                          ❤ 공감
                      </button>
                      @*<button type="button" class="btn btn-Light" onclick="index.like()"
                              style="border: 1px solid black;">
                          🤍 ${board.blike}
                      </button>*@
                  </div>
    <div class="card" style="margin-bottom: 20px;">
        <div class="card">
            <form>
                <div class="card-body">
                    <textarea id="reply-content" class="form-control" rows="1"></textarea>
                </div>
                <div class="card-footer">
                    <button type="button" id="btn-reply-save" class="btn btn-primary">등록</button>
                </div>
            </form>
        </div>
        <br>
        <div class="card">
            <div class="card-header">댓글 리스트</div>
            <ul id="reply-box" class="list-group">
                <li class="list-group-item d-flex justify-content-between">
                    <div>댓글 내용</div>
                    <div class="d-flex">
                        <div class="font-italic">
                            작성자 : 테스터1
                            &nbsp;
                        </div>
                        <button onclick="index.replyDelete(${board.id}, ${reply.id})"
                                class="badge">
                            삭제
                        </button>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
