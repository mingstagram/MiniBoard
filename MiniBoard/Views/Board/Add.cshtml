@model MiniBoard.Models.Board

<div class="container">
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <form class="form-horizontal" method="post" asp-controller="Board" asp-action="Add">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label>제목</label>
                    <input type="text" class="form-control" asp-for="NoteTitle" placeholder="제목 입력"/>
                    <span class="text-danger" asp-validation-for="NoteTitle"></span>
                </div>
                <div class="form-group">
                    <label>내용</label>
                    <textarea class="form-control" rows="20" asp-for="NoteContents"></textarea>
                    <span class="text-danger" asp-validation-for="NoteContents"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">저장</button>
                    <a class="btn btn-warning" asp-controller="Board" asp-action="Index">취소</a>
                </div>
            </form>
        </div>
        <div class="col-lg-1"></div>
    </div>
</div>