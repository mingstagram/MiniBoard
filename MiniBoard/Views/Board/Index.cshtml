<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr style="text-align:center;">
                <th style="width:10%;">번호</th>
                <th style="width:60%;">제목</th>
                <th style="width:10%;">작성자</th>
                <th style="width:20%;">작성일</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var board in Model)
            {
                <tr style="text-align:center;">
                    <td>@board.NoteNo</td>
                    <td>
                        @*http://www.example.com/Board/Detail?noteNo=1*@
                        <a asp-controller="Board" asp-action="Detail" asp-route-NoteNo="@board.NoteNo">@board.NoteTitle</a>
                    </td>
                    <td>@board.UserNo</td>
                    <td>@board.CreateDate</td>
                </tr>
            }

        </tbody>
    </table>

    <a class="btn btn-warning" asp-controller="Board" asp-action="Add">게시물 작성</a>
</div>